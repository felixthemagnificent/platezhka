<h1>Listing payments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Paymenttype</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Amount</th>
      <!--<th>User</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= Paymenttype.find(payment.paymenttype_id).typename %></td>
        <td><%= payment.start_date %></td>
        <td><%= payment.end_date %></td>
        <td><%= payment.amount %></td>
       <!-- <td><%= payment.user.name %></td>-->
        <td><%= link_to 'Show', user_payment_path(id: payment.id, user_id: payment.user.id) %></td>
        <td><%= link_to 'Edit', edit_user_payment_path(id: payment.id, user_id: payment.user.id) %></td>
        <td><%= link_to 'Destroy', user_payment_path(id: payment.id, user_id: payment.user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

